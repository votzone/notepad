<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sep_gray"
    tools:context="wq.votzone.notebook.activity.FeedbackActivity"
    android:orientation="vertical">
    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/Theme.ToolBar.Base.Title"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" >
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="反馈"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>


    </android.support.design.widget.CoordinatorLayout>
    <TextView
        android:background="@drawable/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="18dp"
        android:textColor="#222222"
        android:text="该应用是小v的第一款应用"/>
    <TextView
        android:background="@drawable/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="#444444"
        android:textSize="16dp"
        android:text="小v会在接下来继续完善和增加功能,如果您有好的功能可以通过以下方式告诉我."/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/btn_market"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16dp"
        android:textColor="#444444"
        android:background="@drawable/btn_def_selector"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="去市场评价"/>
    <TextView
        android:id="@+id/btn_qq"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16dp"
        android:textColor="#444444"
        android:layout_marginTop="1dp"
        android:background="@drawable/btn_def_selector"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="去QQ群聊"/>
    <TextView
        android:id="@+id/btn_wx"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16dp"
        android:textColor="#444444"
        android:layout_marginTop="1dp"
        android:background="@drawable/btn_def_selector"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="关注小v公众号:votzone"/>

    <TextView
        android:id="@+id/btn_wx_dna"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:textColor="#444444"
        android:background="@drawable/btn_def_selector"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="微信捐助"/>
    <TextView
        android:id="@+id/btn_zfb"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_height="50dp"
        android:textSize="16dp"
        android:textColor="#444444"
        android:background="@drawable/btn_def_selector"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="支付宝捐助"/>

    <TextView
        android:id="@+id/btn_open_source"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:textSize="16dp"
        android:textColor="#444444"
        android:background="@drawable/btn_def_selector"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="获取开源地址"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <ImageView
        android:id="@+id/iv_loan_market"
        android:src="@mipmap/loan"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="80dp" />
</LinearLayout>
