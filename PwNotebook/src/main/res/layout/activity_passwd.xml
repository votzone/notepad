<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    android:orientation="vertical"
    tools:context="wq.votzone.notebook.activity.PasswdActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="请输入密码解锁"
            android:textColor="@drawable/white"
            android:textSize="18dp"
            android:gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pass_sep"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@drawable/white"
            android:gravity="center"
            android:textSize="25dp"
            android:text="* * * *"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pass_sep"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/tv_num1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_pass_selector"
                        android:text="1"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:textColor="@drawable/white"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/pass_sep"/>
                    <TextView
                        android:id="@+id/tv_num2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="2"
                        android:background="@drawable/btn_pass_selector"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:textColor="@drawable/white"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/pass_sep"/>
                    <TextView
                        android:id="@+id/tv_num3"
                        android:layout_width="0dp"
                        android:background="@drawable/btn_pass_selector"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="3"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:textColor="@drawable/white"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/pass_sep"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/tv_num4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_pass_selector"
                        android:text="4"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:textColor="@drawable/white"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/pass_sep"/>
                    <TextView
                        android:id="@+id/tv_num5"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="5"
                        android:background="@drawable/btn_pass_selector"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:textColor="@drawable/white"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/pass_sep"/>
                    <TextView
                        android:id="@+id/tv_num6"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="6"
                        android:textSize="18dp"
                        android:background="@drawable/btn_pass_selector"
                        android:gravity="center"
                        android:textColor="@drawable/white"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/pass_sep"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/tv_num7"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"

                        android:text="7"
                        android:textSize="18dp"
                        android:background="@drawable/btn_pass_selector"
                        android:gravity="center"
                        android:textColor="@drawable/white"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/pass_sep"/>
                    <TextView
                        android:id="@+id/tv_num8"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="8"
                        android:textSize="18dp"
                        android:background="@drawable/btn_pass_selector"
                        android:gravity="center"
                        android:textColor="@drawable/white"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/pass_sep"/>
                    <TextView
                        android:id="@+id/tv_num9"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="9"
                        android:textSize="18dp"
                        android:background="@drawable/btn_pass_selector"
                        android:gravity="center"
                        android:textColor="@drawable/white"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/pass_sep"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="退出"
                    android:textSize="18dp"
                    android:background="@drawable/btn_pass_selector"
                    android:gravity="center"
                    android:textColor="@drawable/white"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/pass_sep"/>
                <TextView
                    android:id="@+id/tv_num0"
                    android:clickable="true"
                    android:background="@drawable/btn_pass_selector"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textColor="@drawable/white"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/pass_sep"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/ll_back"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:background="@drawable/btn_pass_selector"
                android:gravity="center"
                android:textColor="@drawable/white">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_pass_back"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/pass_sep"/>
            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="确定"
                android:enabled="false"
                android:background="@drawable/btn_pass_selector"
                android:textSize="18dp"
                android:gravity="center"
                android:textColor="@drawable/white"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
