<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="250dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/ll_items"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:inputType="none"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:background="@android:color/white"
                        android:gravity="center">
                        <View
                            android:id="@+id/v_acc_level"
                            android:layout_width="20dp"
                            android:layout_gravity="center"
                            android:background="@drawable/acc_level_bg_1"
                            android:layout_height="20dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_value_platform"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:paddingLeft="5dp"
                        android:textSize="14dp"
                        android:gravity="center_vertical"
                        tools:text="平台"
                        />
                    <LinearLayout
                        android:id="@+id/platform_input_close"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/btn_def_selector"
                        android:gravity="center">
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/btn_def_selector"

                    android:orientation="horizontal">

                    <TextView
                        android:inputType="none"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textSize="14dp"
                        android:layout_marginRight="1dp"
                        android:text="账号:"/>
                    <TextView
                        android:id="@+id/tv_value_username"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        android:textSize="14dp"
                        android:gravity="center_vertical"
                        tools:text="账号呀"/>
                    <LinearLayout
                        android:id="@+id/username_input_close"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/btn_def_selector"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="@dimen/input_close_size"
                            android:layout_height="@dimen/input_close_size"
                            android:src="@mipmap/icon_copy"/>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_def_selector"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textSize="14dp"
                        android:layout_marginRight="1dp"
                        android:text="密码:"/>
                    <TextView
                        android:id="@+id/tv_value_password"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        android:textSize="14dp"
                        android:gravity="center_vertical"
                        tools:text="密码"/>
                    <LinearLayout
                        android:id="@+id/password_input_close"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/btn_def_selector"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="@dimen/input_close_size"
                            android:layout_height="@dimen/input_close_size"
                            android:src="@mipmap/icon_copy"/>
                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>

</ScrollView>