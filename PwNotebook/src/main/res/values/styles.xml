<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FabTheme">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Transparent" parent="AppTheme">
    　　<item name="android:windowBackground">@color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>-->
        <item name="android:windowAnimationStyle">@style/AlphaShow</item>
    </style>

    <style name="WQDefaultNoTitle" parent="AppTheme.NoActionBar">
        <item name="android:windowAnimationStyle">@style/FlyIn</item>
    </style>



    <style name="AlphaShow" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_new_show</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_finish_dismiss</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_new_show</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_finish_dismiss</item>
        <item name="android:taskOpenEnterAnimation">@anim/activity_new_show</item>
        <item name="android:taskOpenExitAnimation">@anim/activity_finish_dismiss</item>
        <item name="android:taskCloseEnterAnimation">@anim/activity_new_show</item>
        <item name="android:taskCloseExitAnimation">@anim/activity_finish_dismiss</item>
    </style>

    <style name="TranAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_new_up</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_finish_down</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_new_up</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_finish_down</item>
        <item name="android:taskOpenEnterAnimation">@anim/activity_new_up</item>
        <item name="android:taskOpenExitAnimation">@anim/activity_finish_down</item>
        <item name="android:taskCloseEnterAnimation">@anim/activity_new_up</item>
        <item name="android:taskCloseExitAnimation">@anim/activity_finish_down</item>
    </style>

    <style name="FlyIn" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_new_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_finish_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_new_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_finish_out</item>
        <item name="android:taskOpenEnterAnimation">@anim/activity_new_in</item>
        <item name="android:taskOpenExitAnimation">@anim/activity_finish_out</item>
        <item name="android:taskCloseEnterAnimation">@anim/activity_new_in</item>
        <item name="android:taskCloseExitAnimation">@anim/activity_finish_out</item>
    </style>

    <style name="Theme.ToolBar.Base.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CommonDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="fileName" parent="android:Widget.TextView">
        <item name="android:ellipsize">marquee</item>
        <item name="android:freezesText">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="fileIcon">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>
</resources>
